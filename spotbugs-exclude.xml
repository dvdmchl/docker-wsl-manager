<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Suppress uncalled private method warnings for MainController as @FXML methods are called via reflection -->
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.MainController"/>
        <Bug pattern="UPM_UNCALLED_PRIVATE_METHOD"/>
    </Match>

    <!-- Suppress internal representation exposure for DockerClient as it is a core service intended to be shared -->
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.DockerConnectionManager"/>
        <Method name="getDockerClient"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>

    <!-- Suppress exposure of internal JavaFX properties and lists intended for binding -->
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.model.VolumeViewItem"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.logic.TextFlowSelectionHandler"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.service.ContainerStatsService"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Suppress false positives in MainController due to Java version parsing issues -->
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.MainController"/>
        <Bug pattern="URF_UNREAD_FIELD,UWF_UNWRITTEN_FIELD,UMAC_UNCALLABLE_METHOD_OF_ANONYMOUS_CLASS,UI_INHERITANCE_UNSAFE_GETRESOURCE"/>
    </Match>
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.ProcessListController"/>
        <Bug pattern="UPM_UNCALLED_PRIVATE_METHOD,URF_UNREAD_FIELD,UWF_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR,BC_UNCONFIRMED_CAST_OF_RETURN_VALUE"/>
    </Match>
    <Match>
        <Class name="org.dreamabout.sw.dockerwslmanager.service.ContainerStatsService"/>
        <Method name="calculateCpuPercent"/>
        <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
    </Match>
</FindBugsFilter>
